<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topconst"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/album_arrowbuttonleft_IB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_arrow_black"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <!-- HomeFragment 전환 버튼 -->

    <ImageButton
        android:id="@+id/album_playermorebutton_IB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <!-- 더보기 버튼 -->

    <ImageButton
        android:id="@+id/album_heartoffbutton_IB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/album_playermorebutton_IB"
        app:layout_constraintTop_toTopOf="parent"/>
    <!-- 하트 off 버튼 -->

    <TextView
        android:id="@+id/album_IU5thtext_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IU 5th Album 'LILAC'"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/album_arrowbuttonleft_IB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- 5th Album 텍스트 -->

    <TextView
        android:id="@+id/album_singerIUtext_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/album_IU5thtext_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/album_date_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/album_singerIUtext_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/album_lilacalbum_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_album_exp2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/album_date_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/album_lilacLP_IV"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/img_album_lp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toEndOf="@id/album_lilacalbum_IV"
        app:layout_constraintTop_toTopOf="@id/album_lilacalbum_IV"
        app:layout_constraintBottom_toBottomOf="@id/album_lilacalbum_IV"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/widget_black_play"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="@id/album_lilacalbum_IV"
        app:layout_constraintBottom_toBottomOf="@id/album_lilacalbum_IV"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_TB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorColor="#3f3fff"
        app:tabTextColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintTop_toBottomOf="@id/album_lilacalbum_IV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<!--    초기에는 fullwidth가 true 상태여서 인디케이터 길이가 길었음     -->
<!--    클릭했을 때 퍼지는 리플 효과를 투명으로 변경 -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_VP"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/album_content_TB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!-- constraint에서 높이를 0으로 설정해주고 제약을 걸어주면 bottom이 parent에 맞춰짐 -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_lilacalbum_IV"
        app:layout_constraintBottom_toBottomOf="parent">



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>